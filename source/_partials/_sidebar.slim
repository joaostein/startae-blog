#secondary.widget-area role="complementary"

  aside#recent-posts
    h2 Posts Recentes
    ol
      - blog.articles[0...10].each do |article|
        li
          a href="#{{article.url}}"
            == article.title
            time.entry-date(datetime="#{article.date.strftime('%Y-%m-%dT%T+00:00')}" pubdate)
              == article.date.strftime('%e de %b %Y')

  aside#categories
    h2 Categorias
    ol
      - blog.tags.each do |tag, articles|
        li
          a href="#{{tag_path tag}}" #{tag} <span>(#{articles.size})</span>

